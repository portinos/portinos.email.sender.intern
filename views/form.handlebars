<div class="form-container">
    <a href="/logout" class="logout-button">Logout</a> 
  <div class="header">
    <h1>✉️ Portinos Mailing Tool</h1>
  </div>
  
  <form action='/' method='POST'>
    {{> form-group 
      label="Email Address"
      type="email"
      id="email"
      name="email"
      required=true
    }}
    
    {{> form-group 
      label="Subject"
      type="text"
      id="subject"
      name="subject"
      required=true
    }}
    
    <div class="form-group">
      <label for="HTML">HTML</label>
      <textarea 
        name="HTML" 
        id="HTML" 
        required
      ></textarea>
    </div>
    
    <button type='submit'>Send Email</button>
    {{> form-error error=error}}
    
    {{#if success}}
      <p class='success'>{{success}}</p>
    {{/if}}
  </form>
</div>
